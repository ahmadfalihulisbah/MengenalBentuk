<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    tools:context=".KuisTebakActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FA9E16"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-black"
                android:padding="10dp"
                android:text="1"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/soal"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:minHeight="150dp"
                android:padding="20dp"
                android:text="@string/gejala1"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="486dp"
        android:layout_height="92dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/optiona"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/pop_jamdinding" />

        <ImageButton
            android:id="@+id/optionb"
            android:layout_width="85dp"
            android:layout_height="95dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/pop_bola" />

        <ImageButton
            android:id="@+id/optionc"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/pop_papantulis" />

        <ImageButton
            android:id="@+id/optiond"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/pop_rambujalan" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>